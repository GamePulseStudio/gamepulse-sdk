{
  "name": "@gamepulse-studio/sdk-monorepo",
  "version": "2.0.22",
  "description": "GamePulse SDK - Cross-platform analytics for game developers",
  "private": true,
  "workspaces": [
    "web",
    "unity"
  ],
  "scripts": {
    "build": "npm run build:web && npm run build:unity && npm run build:android",
    "build:web": "cd web && npm run build",
    "build:unity": "cd unity && ./build-unity-package.sh",
    "build:android": "cd android && ./gradlew assembleRelease",
    "test": "npm run test:web && npm run test:android",
    "test:web": "cd web && npm test",
    "test:android": "cd android && ./gradlew test",
    "lint": "eslint web/src/**/*.{js,ts}",
    "format": "prettier --write web/src/**/*.{js,ts,json,md} unity/**/*.{cs,md} android/**/*.{java,md}",
    "format:check": "prettier --check web/src/**/*.{js,ts,json,md}",
    "clean": "npm run clean:web && npm run clean:android",
    "clean:web": "cd web && npm run clean",
    "clean:android": "cd android && ./gradlew clean",
    "version:sync": "node scripts/sync-versions.js",
    "release": "changeset publish",
    "version": "changeset version"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "lerna": "^7.0.0",
    "typescript": "^5.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/gamepulse-sdk.git"
  },
  "keywords": [
    "game",
    "analytics",
    "sdk",
    "unity",
    "unreal",
    "mobile",
    "web",
    "gaming"
  ],
  "author": "GamePulse Team",
  "license": "MIT"
}
