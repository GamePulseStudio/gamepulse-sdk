<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Network usage description -->
    <key>NSAppTransportSecurity</key>
    <dict>
        <key>NSAllowsArbitraryLoads</key>
        <false/>
        <key>NSExceptionDomains</key>
        <dict>
            <key>gamealytics.click</key>
            <dict>
                <key>NSExceptionAllowsInsecureHTTPLoads</key>
                <false/>
                <key>NSExceptionMinimumTLSVersion</key>
                <string>TLSv1.2</string>
                <key>NSIncludesSubdomains</key>
                <true/>
            </dict>
        </dict>
    </dict>
    
    <!-- Location permissions (optional, for future geo-analytics) -->
    <key>NSLocationWhenInUseUsageDescription</key>
    <string>This app uses location data to provide geo-analytics insights for game performance optimization.</string>
    
    <key>NSLocationAlwaysAndWhenInUseUsageDescription</key>
    <string>This app uses location data to provide geo-analytics insights for game performance optimization.</string>
    
    <!-- Background processing for event queue -->
    <key>UIBackgroundModes</key>
    <array>
        <string>background-processing</string>
        <string>background-fetch</string>
    </array>
    
    <!-- Background task identifier -->
    <key>BGTaskSchedulerPermittedIdentifiers</key>
    <array>
        <string>com.gamealytics.sdk.event-processing</string>
    </array>
</dict>
</plist>
